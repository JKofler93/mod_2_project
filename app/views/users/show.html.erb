<h1>User Show Page</h1> 

<label>Username:</label><br>
<%=@user.user_name%><br><br>

<label>Age:</label><br>
<%=@user.age%><br><br>

<label>Your Current Balance:</label><br>
<%='$'%><%=@user.balance%><br><br>

<label> Update your information: </label><br>
<%=link_to @user.user_name, edit_user_path(@user) %><br><br>

<%=button_to "Delete", @user, method: :delete %>


<table>
  <caption>Your Investments:</caption>
  <thead>
    <tr>
      <th scope="col" colspan="2">Crypto Currency Report:</th>
      <th scope="col">Total Units:</th>
      <th scope="col">Total Value:</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><% @user.currencies.uniq.each do |currency|%>
           <%= currency.crypto%><br>

                <%end%></td>

      <td> <% @user.user_currencies.map do |user_currency|%>
              <%= user_currency.amount%><br>
                    <%end%></td>
    </tr>
  </tbody>
</table>

              